<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#31abfe"
                android:endColor="#0a8ee0"/>
            <corners
                android:radius="7dp"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#31abfe"
                android:endColor="#0a8ee0"/>
            <corners
                android:radius="7dp"/>
        </shape>
    </item>
</selector>