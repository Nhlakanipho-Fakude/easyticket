<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sbuhost.easyticket.Login"
    android:id="@+id/it">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/crowd"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/overlay_color"/>
    <ImageView
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/app_logo"
        android:src="@mipmap/ic_launcher"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:inputType="textPersonName"
        android:hint="Email Address"
        android:ems="10"
        android:id="@+id/email"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:textStyle="bold|normal"
        android:layout_alignParentStart="true"
        android:background="@drawable/username_back"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:paddingLeft="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:layout_below="@+id/email"
        android:layout_alignParentLeft="true"
        android:textStyle="bold|normal"
        android:layout_alignParentStart="true"
        android:background="@drawable/password_back"
        android:hint="Password"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="30dp"
        android:layout_alignRight="@+id/email"
        android:layout_alignEnd="@+id/email"
        android:paddingLeft="5dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="forgot password ?"
        android:id="@+id/forgot"
        android:onClick="forgotPassword"
        android:layout_below="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:textStyle="bold|normal"
        android:textColor="#ffffff"
        android:layout_alignStart="@+id/password"
        android:background="#0000"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/signup"
        android:onClick="signUp"
        android:layout_below="@+id/password"
        android:layout_alignRight="@+id/password"
        android:layout_alignEnd="@+id/password"
        android:textStyle="bold|normal"
        android:textColor="#ffffff"
        android:background="#0000"/>

    <Button
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="Log in"
        android:id="@+id/login"
        android:layout_below="@+id/forgot"
        android:onClick="login"
        android:textStyle="bold|normal"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_button_skin"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/fb_login"
        android:src="@drawable/fb_logo"
        android:background="@drawable/social_btn_background"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/gplus_login"
        android:background="@drawable/social_btn_background"
        android:layout_alignTop="@+id/fb_login"
        android:layout_toLeftOf="@+id/fb_login"
        android:src="@drawable/gp_logo"
        android:layout_toStartOf="@+id/fb_login" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/twitter_login"
        android:background="@drawable/social_btn_background"
        android:layout_alignTop="@+id/fb_login"
        android:layout_toRightOf="@+id/fb_login"
        android:src="@drawable/twitter_logo"
        android:layout_toEndOf="@+id/fb_login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or sign in with"
        android:id="@+id/textView6"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:layout_marginTop="10dp" />
</RelativeLayout>
