<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sbuhost.easyticket.Home">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/crowd"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/overlay_color"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:id="@+id/linearLayout">

        <ImageButton
            android:src="@drawable/about"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/about_btn"
            android:background="@drawable/default_btn_background"
            android:layout_margin="15dp" />
        <ImageButton
            android:src="@drawable/menu"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/events_btn"
            android:onClick="launchEvents"
            android:background="@drawable/default_btn_background"
            android:layout_margin="15dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout2">
        <ImageButton
            android:src="@drawable/settings"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/settings_btn"
            android:background="@drawable/default_btn_background"
            android:layout_margin="15dp" />
        <ImageButton
            android:src="@drawable/social"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/social_btn"
            android:background="@drawable/default_btn_background"
            android:layout_margin="15dp" />
    </LinearLayout>

    <Button
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:background="@drawable/login_button_skin"
        android:text="Logout"
        android:id="@+id/button4"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true" />
</RelativeLayout>